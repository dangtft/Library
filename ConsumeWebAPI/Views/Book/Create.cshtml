@model ConsumeWebAPI.Models.BookViewModel

<h1>Add New Book</h1>

<form asp-controller="BookController" asp-action="Create">
    <div>
        <label>Title:</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Description:</label>
        <input asp-for="Description" />
    </div>
    <div>
        <label>isRead:</label>
        <input asp-for="isRead" />
    </div>
    <div>
        <label>Date Read:</label>
        <input asp-for="DateRead" type="date" />
    </div>
    <div>
        <label>Genre:</label>
        <input asp-for="Genre" />
    </div>
    <div>
        <label>Cover URL:</label>
        <input asp-for="CoverUrl" />
    </div>
    <div>
        <label>Date Added:</label>
        <input asp-for="DateAdded" type="date" />
    </div>
    <div>
        <label>PublisherID:</label>
        <input asp-for="PublisherID" />
    </div>
    <div>
        <label>AuthorsID:</label>
       <input asp-for ="AuthorID" />
    </div>
    <button asp-controller="Book" asp-action="Create" type="submit">Add Book</button>
</form>
