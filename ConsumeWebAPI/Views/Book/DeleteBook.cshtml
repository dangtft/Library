@model ConsumeWebAPI.Models.BookViewModel

<h1>Delete Book</h1>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <h4>Title: @Model.Title</h4>
    <h4>Description: @Model.Description</h4>
    <h4>isRead: @Model.isRead</h4>
    <h4>Date Read: @(Model.DateRead.HasValue ? Model.DateRead.Value.ToString("yyyy-MM-dd") : "")</h4>
    <h4>Genre: @Model.Genre</h4>
    <h4>Cover URL: @Model.CoverUrl</h4>
    <h4>Date Added: @(Model.DateAdded.HasValue ? Model.DateAdded.Value.ToString("yyyy-MM-dd") : "")</h4>
    <h4>Publisher: @Model.PublisherName</h4>
    <h4>Authors:</h4>
    <ul>
        @foreach (var author in Model.AuthorNames)
        {
            <li>@author</li>
        }
    </ul>
</div>

<form asp-controller="BookController" asp-action="DeleteBook" asp-route-id="@Model.Id" method="post">
    <button type="submit">Delete</button> | <a asp-action="Index">Cancel</a>
</form>
